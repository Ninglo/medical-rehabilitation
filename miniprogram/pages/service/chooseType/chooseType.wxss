.dateCurrent{
  text-align: center;
  margin: 20rpx;
  margin-bottom: 50rpx 
}
.dateChoose {
  background: #fff;
  overflow: hidden;
  box-shadow:0px 1px 1px 0px rgba(198,198,198,0.5);
  height: 150rpx;
}

.dateChooseSwiper {
  flex-grow: 1;
  height: 4em;
}
.swiperItem {
  display: flex;
  flex-direction: column;
}
.weekday, .dateday {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  flex-grow: 1;
}
.week, .day {
  width: 14.286%;
  flex-basis: 14.286%;
}
.week{
  color: #999;
  font-size: 24rpx;
}
.day text {
  position: relative;
  color: black;
}
.arrow{
width: 10px;
height: 10px;
border-top: 2px solid #999;
border-right: 2px solid #999;
position: absolute;
right: 20rpx;
transform: rotate(45deg);
margin-top:5rpx;
}
.typeOfHelp{
  margin-top: 100rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  font-size: 45rpx;
}
.longBar {
    position: relative;                               
    display: flex;                                   
    padding: 15px;                                   
    align-items: center;                                
    border-bottom: 1px solid #F5F5F5;
    border-top: 1px solid #F5F5F5;          
    background-color: white;                          
    padding-top: 10px;                                  
}
.typeOfNum{
  display: inline-block;
  font-size: 18px;
  color: black;
}